<div class="goal-{{ goal.data.number}} goal">
  <header class="goal-header">
    <div class="goal-icon">
      <img src="{{ goal.data.icon }}" alt="{{ goal.data.title }}" >
    </div>
    <div class="goal-title">
      <h3 id="{{ goal.data.title | slug }}">
        <span class="goal-number">{{ goal.data.number }}.</span>
        {{ goal.data.title }}
      </h3>
      <div class="goal-tagline">{{ goal.data.tagline }}</div>
    </div>
  </header>
  <div class="goal-excerpt">{{ goal.data.excerpt }}</div>
  <div class="goal-actions">
    <h4>Actions you can take:</h4>
    {{ goal.data.actions | markdown | safe }}
  </div>
</div>
